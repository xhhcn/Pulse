---
// Skeleton loading state for the system table
// Shows animated placeholder rows while data is loading
---

<div id="loading-indicator" class="animate-page-in">
  <!-- Skeleton rows with staggered animation -->
  {[0, 1, 2, 3, 4].map((i) => (
    <div 
      class="grid grid-cols-[minmax(160px,max-content)_minmax(70px,0.8fr)_minmax(90px,1fr)_minmax(150px,1.8fr)_minmax(150px,1.8fr)_minmax(150px,1.8fr)_minmax(85px,0.9fr)_minmax(90px,1fr)] items-center gap-1 sm:gap-2 px-3 sm:px-4 md:px-6 py-2 sm:py-3 border-b border-[#404040]/30 dark:border-[#404040]/30 border-[#e5e5e5]/50 animate-stagger-in"
      style={`animation-delay: ${i * 80}ms`}
    >
      <!-- Name column -->
      <div class="flex items-center gap-2">
        <div class="h-2 w-2 rounded-full bg-[#333] dark:bg-[#333] bg-[#e5e5e5] animate-skeleton"></div>
        <div class="h-3 w-20 sm:w-24 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
      </div>
      <!-- Time column -->
      <div class="h-3 w-12 sm:w-16 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
      <!-- Location column -->
      <div class="h-6 w-6 sm:h-8 sm:w-8 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
      <!-- CPU column -->
      <div class="flex items-center gap-1 sm:gap-1.5 pr-2 sm:pr-3">
        <div class="h-3 w-8 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
        <div class="h-2.5 sm:h-3 flex-1 min-w-[60px] max-w-[100px] sm:max-w-[120px] rounded-full bg-[#222] dark:bg-[#222] bg-[#f0f0f0] overflow-hidden">
          <div class="h-full w-1/3 rounded-full bg-[#333] dark:bg-[#333] bg-[#e0e0e0] animate-skeleton"></div>
        </div>
      </div>
      <!-- Memory column -->
      <div class="flex items-center gap-1 sm:gap-1.5 pr-2 sm:pr-3">
        <div class="h-3 w-8 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
        <div class="h-2.5 sm:h-3 flex-1 min-w-[60px] max-w-[100px] sm:max-w-[120px] rounded-full bg-[#222] dark:bg-[#222] bg-[#f0f0f0] overflow-hidden">
          <div class="h-full w-2/5 rounded-full bg-[#333] dark:bg-[#333] bg-[#e0e0e0] animate-skeleton"></div>
        </div>
      </div>
      <!-- Disk column -->
      <div class="flex items-center gap-1 sm:gap-1.5 pr-2 sm:pr-3">
        <div class="h-3 w-8 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
        <div class="h-2.5 sm:h-3 flex-1 min-w-[60px] max-w-[100px] sm:max-w-[120px] rounded-full bg-[#222] dark:bg-[#222] bg-[#f0f0f0] overflow-hidden">
          <div class="h-full w-1/2 rounded-full bg-[#333] dark:bg-[#333] bg-[#e0e0e0] animate-skeleton"></div>
        </div>
      </div>
      <!-- Net column -->
      <div class="h-3 w-14 sm:w-16 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
      <!-- OS column -->
      <div class="flex justify-center">
        <div class="h-5 w-5 sm:h-6 sm:w-6 rounded bg-[#282828] dark:bg-[#282828] bg-[#f0f0f0] animate-shimmer"></div>
      </div>
    </div>
  ))}
</div>
